<header id="header-main">
  <nav><a href="<%= groups_path %>"><%= image_tag("house-fill.svg") %></a></nav>
  <h1>Transactions</h1>
  <%= button_to image_tag("box-arrow-left.svg"), destroy_user_session_path, method: :delete, class: "log-out" %>
</header>

<section>
  <div>
    <span>Total amount</span> 
    <span><%= @group.total_accumulated_amount %></span>
  </div>

  <div>
    <% @group_transactions.each do |t| %>
      <div>
        <div >
          <span class="primary-text"><%= t.name %></span>
          <span class="date-stamp"><%= t.updated_at %></span>
        </div>
        <div>
          <span ><%= t.amount %></span>
        </div>
      </div>
    <% end %>
  </div>

  <%= button_to "ADD TRANSACTION", new_entity_path, method: "get" %>
</section>
